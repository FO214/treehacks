{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "diagram-response",
  "title": "DiagramResponse",
  "description": "Diagram PNG + component positions for spatial display - Server → Vision Pro",
  "type": "object",
  "required": ["png_base64", "component_positions"],
  "properties": {
    "png_base64": {
      "type": "string",
      "contentEncoding": "base64",
      "description": "PNG image as base64-encoded string"
    },
    "component_positions": {
      "type": "array",
      "description": "Component blocks with pixel coordinates for spatial placement",
      "items": {
        "type": "object",
        "required": ["id", "label", "x", "y"],
        "properties": {
          "id": { "type": "string", "description": "Component ID from diagram" },
          "label": { "type": "string", "description": "Display label" },
          "x": { "type": "integer", "description": "X pixel on 1920×1080 PNG" },
          "y": { "type": "integer", "description": "Y pixel on 1920×1080 PNG" }
        }
      }
    },
    "width": { "type": "integer", "default": 1920 },
    "height": { "type": "integer", "default": 1080 }
  }
}
